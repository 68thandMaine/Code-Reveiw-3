@using HairSalon.Models;
@{
  Layout = "_Layout";
}

<h1>Booked Clients:</h1>
<ul>
@if(Model.Count == 0)
{
<p>There are no clients booked to this stylist.</p>
}

@if(Model.Count != 0)
{
@foreach (Client client in Model)
{
<li><a href='/clients/@client.GetId()'>@client.GetName()</a></li>
}
}
</ul>
<a href ="/stylists/new">Add a new employee</a>
<a href = "/clients/new">Add a new client</a>

<form action="/items/delete" method="post">
<button type="submit" name="button">Clear All Clients</button>
</form>
