@{
Layout= "_Layout";
}
@using HairSalon.Models

<div class ="container">
<h1>Employees</h1>
@if (@Model.Count == 0)
{
<h3>There are no employees listed at this location</h3>
<p><a href='/stylists/new'>Add a new Stylist</a></p>
}

@foreach (Stylist stylist in Model)
{
<h6><a href ='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h6>
}
<form action="/">
<button btn-dark type="submit">Back home</button>
</form>
</div>
